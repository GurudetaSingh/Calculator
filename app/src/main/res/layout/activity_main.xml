<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Number 1:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lblNum1"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/lblNum1"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNum1"
        android:layout_alignLeft="@id/lblNum1"
        android:layout_marginTop="10dp"
        android:text="Number 2:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lblNum2"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/lblNum2"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNum2"
        android:layout_alignLeft="@id/lblNum2"
        android:layout_marginTop="10dp"
        android:onClick="add"
        android:text="+"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnAdd"
        android:layout_toRightOf="@id/btnAdd"
        android:onClick="subtract"
        android:text="-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnAdd"
        android:layout_toRightOf="@id/btnSub"
        android:onClick="multiply"
        android:text="*"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnAdd"
        android:layout_toRightOf="@id/btnMul"
        android:onClick="divide"
        android:text="/"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAdd"
        android:layout_alignLeft="@id/btnAdd"
        android:layout_marginTop="50dp"
        android:textSize="24sp" />
</RelativeLayout>